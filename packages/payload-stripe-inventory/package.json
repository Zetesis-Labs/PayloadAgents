{
  "name": "@nexo-labs/payload-stripe-inventory",
  "version": "1.6.8",
  "description": "Sistema de inventario y suscripciones con Stripe para Payload CMS",
  "keywords": [
    "payload-cms",
    "stripe",
    "payments",
    "subscriptions",
    "inventory",
    "e-commerce"
  ],
  "license": "MIT",
  "author": "",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./server": {
      "import": "./src/server/index.ts",
      "types": "./src/server/index.ts",
      "default": "./src/server/index.ts"
    }
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm copyfiles && tsdown",
    "dev": "tsdown --watch",
    "clean": "rimraf -g {dist,*.tsbuildinfo}",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json}\" dist/ || true",
    "prepare": "pnpm run clean && pnpm run build"
  },
  "peerDependencies": {
    "@nexo-labs/payload-taxonomies": "workspace:*",
    "@payloadcms/plugin-stripe": "^3.70.0",
    "next": "15.4.8",
    "payload": "^3.70.0",
    "react": "^19.0.0",
    "stripe": "17.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "npm:types-react@19.0.0-rc.1",
    "copyfiles": "^2.4.1",
    "next": "15.4.10",
    "rimraf": "^5.0.5",
    "tsdown": "^0.16.5",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./server": {
        "import": "./dist/server/index.js",
        "types": "./dist/server/index.d.ts",
        "default": "./dist/server/index.js"
      }
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
