{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "composite": false,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "plugins": [
      { "name": "next" }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@payload-config": ["src/payload.config.ts"],
      "@payload-types": ["src/payload-types.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "scripts"]
}
